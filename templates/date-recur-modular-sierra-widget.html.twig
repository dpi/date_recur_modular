<div{{ attributes }}>
  <div class="date-recur-modular-sierra-widget-day">
    {% spaceless %}
    {{ widget.day_start }}
    {{ widget.time_start }}
    {{ ' to '|t }}
    {{ widget.time_end }}
    {{ widget.day_end }}
    {{ widget.time_zone }}
    {{ widget|without('day_start', 'time_start', 'time_end', 'day_end', 'time_zone', 'is_all_day', 'recurrence_option', 'buttons') }}
    {% endspaceless %}
  </div>
  <div class="date-recur-modular-sierra-widget-recurrences">
    {{ widget.is_all_day }}
    {{ widget.recurrence_option }}
  </div>
  {{ widget.buttons }}
</div>
